{
    "ComponentName": "card_head_standings",
    "BlockType": "canvas",
    "Orientation": "Vertical",
    "Margin": "50",
    "Items": [
        {
            "BlockType": "image",
            "Source": "Session/racename_bg.png",
            "Width": 240,
            "Height": 165,
            "PositionX": 10,
            "PositionY": 5,
            "Colorize": {
                "Color": "{LightBlue}",
                "ColorBlendingMode": "Normal"
            }
        },
        {
            "BlockType": "image",
            "Source": "{Season.LogotypePath}",
            "Height": 25,
            "MaxWidth": 90,
            "PositionX": 0,
            "PositionY": 0
        },
        {

            "BlockType": "text",
            "Source": "{Season.LeagueInfo.LeagueFullName, Converter=StringToUpperString}\nCHAMPIONSHIP",
            "FontSize": 12,
            "PositionY": 0,
            "PositionX": 93
        },
        {
            "BlockType": "text",
            "Source": "{Standings.LastEvent.Track.CircuitFullName, Converter=StringToUpperString}",
            "FontName": "{FontMainTitle}",
            "FontSize": "{CardFontSize}",
            "Padding": "10",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Top",
            "Width": "{CardMaxWidth}",
            "PositionY": 30,
            "PositionX": -10,
            "Triggers": [
                {
                    "Trigger": "NameDescription2"
                }
            ],
            "TextOptions": {
                "Wrap": true
            }
        },
        {
            "BlockType": "text",
            "Source": "{Standings.LastEvent.DateLocal, Converter=DateCustomFormat, Parameter=yyyy}",
            "FontName": "{FontMainTitle}",
            "Foreground": "{DarkBlue}",
            "FontSize": 15,
            "Padding": "5",
            "PositionY": 132,
            "PositionX": 100
        }
    ]

}