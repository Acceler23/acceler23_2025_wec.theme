{
    "ComponentName": "card_head",
    "BlockType": "canvas",
    "Orientation": "Vertical",
    //"Margin": "50",
    "Items": [
        {
            "BlockType": "image",
            "Source": "Session/racename_bg.png",
            "Width": 240,
            "Height": 165,
            "PositionX": 10,
            "PositionY": 25,
            "Colorize": {
                "Color": "{LightBlue}",
                "ColorBlendingMode": "Normal"
            }
        },
        {
            "BlockType": "dock",
            "Height": 50,
            "Width": 90,
            "PositionX": 0,
            "PositionY": 0,
            //"Background": "#dddddd",
            "Items": [
                {
                    "BlockType": "image",
                    "Height": 50,
                    "Source": "{Season.LogotypePath}",
                    "VerticalAlignment": "Bottom",
                    "HorizontalAlignment": "Right"
                }
            ]
        },
        {

            "BlockType": "text",
            "Source": "{Season.LeagueInfo.LeagueFullName, Converter=StringToUpperString}\nCHAMPIONSHIP",
            "FontSize": 12,
            "PositionY": 20,
            "PositionX": 93
        },
        {
            "BlockType": "text",
            "Source": "{Session.Track.CircuitFullName, Converter=StringToUpperString}",
            "FontName": "{CardHeadFont}",
            "FontSize": "{CardFontSize}",
            "Padding": "10",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Top",
            "Width": "{CardMaxWidth}",
            "PositionY": 50,
            "PositionX": -10,
            "Triggers": [
                {
                    "Trigger": "NameDescription"
                }
            ],
            "TextOptions": {
                "Wrap": true
            }
        },
        {
            "BlockType": "text",
            "Source": "{Event.DateLocal, Converter=DateCustomFormat, Parameter=yyyy}",
            "FontName": "{FontMainTitle}",
            "Foreground": "{DarkBlue}",
            "FontSize": 15,
            "Padding": "5",
            "PositionY": 152,
            "PositionX": 100
        }
    ]
}