{
    "ComponentName": "card_driver",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "VerticalAlignment": "Center",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{LightBlue}"
    },
    "Items": [
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "BackgroundImage": "Session/car_highlight.png",
            "UseBackgroundCrop": true,
            "Height": 970,
            "Width": 343,
            "ColorizeBackground": {
                "Color": "{DarkBlue}"
            },
            "Items": [
                {
                    "BlockType": "canvas",
                    "Orientation": "Vertical",
                    "BackgroundImage": "Session/car_bright.png",
                    "UseBackgroundCrop": true,
                    "Height": 970,
                    "Width": 343,
                    "ColorizeBackground": {
                        "Color": "{LightBlue}"
                    },
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "card_head_standings",
                            "PositionX": 50,
                            "PositionY": 60
                        },
                        {
                            "BlockType": "itemstack",
                            "HorizontalAlignment": "Center",
                            "Width": 343,
                            "PositionY": 250,
                            "ItemStackOptions": {
                                "Limit": 1,
                                "ItemSource": "{Standings.Drivers}",
                                "ItemTemplate": {
                                    "BlockType": "stack",
                                    "Orientation": "Vertical",
                                    "Items": [
                                        {
                                            "BlockType": "dock",
                                            "Width": 343,
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "Orientation": "Horizontal",
                                            "Items": [
                                                {
                                                    "BlockType": "image",
                                                    "Source": "{Item.Driver.LogotypePath}",
                                                    "Height": 600,
                                                    "VerticalAlignment": "Top",
                                                    "HorizontalAlignment": "Center",
                                                    "Triggers": [
                                                        {
                                                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                                            "Property": "Source",
                                                            "Value": "driver_placeholder.png"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "BlockType": "image",
                            "Source": "Session/driver_shade.png",
                            "Width": 343,
                            "Height": 700,
                            "PositionY": 300,
                            "Colorize": {
                                "Color": "{DarkBlue}"
                            }
                        },
                        {
                            "BlockType": "image",
                            "Source": "Session/driver_shade.png",
                            "Width": 343,
                            "Height": 700,
                            "PositionY": 300,
                            "Colorize": {
                                "Color": "{DarkBlue}"
                            }
                        },
                        {
                            "BlockType": "image",
                            "Source": "Session/driver_shade.png",
                            "Width": 343,
                            "Height": 700,
                            "PositionY": 300,
                            "Colorize": {
                                "Color": "{DarkBlue}"
                            }
                        },
                        {
                            "BlockType": "itemstack",
                            "PositionX": 0,
                            "PositionY": 730,
                            "HorizontalAlignment": "Center",
                            "ItemStackOptions": {
                                "Limit": 1,
                                "ItemSource": "{Standings.Drivers}",
                                "ItemTemplate": {
                                    "BlockType": "stack",
                                    "Orientation": "Vertical",
                                    "Items": [
                                        {
                                            "BlockType": "stack",
                                            "HorizontalAlignment": "Center",
                                            "Width": 343,
                                            "FontSize": "{FontSizeMedium}",
                                            "Foreground": "{Item.Team.SecondaryColor}",
                                            "Items": [
                                                {
                                                    "BlockType": "dock",
                                                    "Width": 343,
                                                    "Items": [
                                                        {
                                                            "BlockType": "stack",
                                                            "Orientation": "Horizontal",
                                                            "HorizontalAlignment": "Center",
                                                            "Spacing": 20,
                                                            "Items": [
                                                                {
                                                                    "BlockType": "image",
                                                                    "Source": "{Item.Team.LogotypePath}",
                                                                    "Height": 90,
                                                                    //"MaxWidth": 100,
                                                                    "HorizontalAlignment": "Center",
                                                                    "VerticalAlignment": "Center",
                                                                    "Triggers": [
                                                                        {
                                                                            "Trigger": "CarLogoRender"
                                                                        }
                                                                    ]
                                                                },
                                                                {
                                                                    "BlockType": "text",
                                                                    "Source": "{Item.Team.Abbreviation, Converter=StringToUpperString}",
                                                                    "Foreground": "{White}",
                                                                    "FontSize": 80,
                                                                    "Padding": "5",
                                                                    "HorizontalAlignment": "Center",
                                                                    "VerticalAlignment": "Center",
                                                                    "FontName": "{FontNameBoldItalic}",
                                                                    "Triggers": [
                                                                        {
                                                                            "Trigger": "NumberAbrevi"
                                                                        },
                                                                        {
                                                                            "Trigger": "NumberBadge"
                                                                        },
                                                                        {
                                                                            "Trigger": "NumberDriver"
                                                                        }
                                                                    ]
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "BlockType": "itemstack",
                            "PositionX": 0,
                            "PositionY": 800,
                            "HorizontalAlignment": "Center",
                            "ItemStackOptions": {
                                "Limit": 1,
                                "ItemSource": "{Standings.Drivers}",
                                "ItemTemplate": {
                                    "BlockType": "stack",
                                    "Orientation": "Vertical",
                                    "Items": [
                                        {
                                            "BlockType": "dock",
                                            "Width": 343,
                                            "Orientation": "Vertical",
                                            "Items": [
                                                {
                                                    "BlockType": "text",
                                                    "Source": "{Item.Driver.Name, Converter=StringToUpperString}",
                                                    "VerticalAlignment": "Bottom",
                                                    "HorizontalAlignment": "Center",
                                                    "FontName": "{FontNameBoldItalic}",
                                                    "FontSize": 40,
                                                    "Width": 223,
                                                    "Padding": "60,20,60,30",
                                                    "TextOptions": {
                                                        "Wrap": true,
                                                        "TextAlignment": "Center",
                                                        "HorizontalAlignment": "Left"
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "BlockType": "text",
                            "PositionX": 0,
                            "PositionY": 950,
                            "Width": 343,
                            "Source": "#{RaceName, Converter=StringToUpperString} {Standings.LastEvent.Track.Name, Converter=StringToUpperString}",
                            "FontSize": 14,
                            "Triggers": [
                                {
                                    "Condition": "{DescriptionName}",
                                    "ConditionAnd": "{Standings.LastEvent.Description, Converter=EmptyObjectToFalse}",
                                    "Property": "Source",
                                    "Value": "#{Standings.LastEvent.Description, Converter=StringToUpperString}"
                                }
                            ],
                            "TextOptions": {
                                "Wrap": true,
                                "TextAlignment": "Center"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}