{
    "ComponentName": "leader_car_card",
    "BlockType": "canvas",
    "Orientation": "Vertical",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{LightBlue}"
    },
    "Items": [
        {
            "BlockType": "image",
            "Source": "{Session.Track.Nation.LogotypePath}",
            "Width": 900,
            "Opacity": 90,
            "PositionX": -270,
            "PositionY": 183,
            "PositionZ": 0
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionY": 0,
            "PozitionZ": 2,
            "Source": "Session/results_shade_top.png",
            "Height": 970,
            "Width": 343,
            "Colorize": {
                "Color": "{DarkBlue}"
            }
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionY": 0,
            "PozitionZ": 2,
            "Source": "Session/car_bright.png",
            "Height": 970,
            "Width": 343,
            "Colorize": {
                "Color": "{LightBlue}"
            }
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionY": 0,
            "PozitionZ": 2,
            "Source": "Session/standings_shade_botton.png",
            "Height": 970,
            "Width": 343,
            "Colorize": {
                "Color": "{LightBlue}"
            }
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionY": 0,
            "PozitionZ": 2,
            "Source": "Session/standings_shade_botton.png",
            "Height": 970,
            "Width": 343,
            "Opacity": 70,
            "Colorize": {
                "Color": "{DarkBlue}"
            }
        },
        {
            "BlockType": "component",
            "Component": "card_head",
            "PositionX": 50,
            "PositionY": 30,
            "PositionZ": 2
        },
        {
            "BlockType": "itemstack",
            "Width": 343,
            "PositionX": 0,
            "PositionY": 250,
            "PositionZ": 2,
            "HorizontalAlignment": "Center",
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "HorizontalAlignment": "Center",
                            "Width": 343,
                            "Padding": "0,10,0,10",
                            "FontSize": "{FontSizeMedium}",
                            "BackgroundImage": "Session/leader_info.png",
                            "Foreground": "{Item.Team.SecondaryColor}",
                            "ColorizeBackground": {
                                "Color": "{Item.Team.Color}"
                            },
                            "Triggers": [
                                {
                                    "Trigger": "LeaderInfoColor"
                                }
                            ],
                            "Items": [
                                {
                                    "BlockType": "dock",
                                    "Width": 343,
                                    "Items": [
                                        {
                                            "BlockType": "stack",
                                            "Orientation": "Horizontal",
                                            "HorizontalAlignment": "Center",
                                            "Spacing": 10,
                                            "Items": [
                                                {
                                                    "BlockType": "image",
                                                    "Source": "{Item.Team.LogotypePath}",
                                                    "Height": "{CardLogoSize}",
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center",
                                                    "Triggers": [
                                                        {
                                                            "Trigger": "CarLogoRender"
                                                        }
                                                    ]
                                                },
                                                {
                                                    "BlockType": "text",
                                                    "Source": "{Item.Team.Abbreviation, Converter=StringToUpperString}",
                                                    "Foreground": "{Item.Team.SecondaryColor}",
                                                    "FontSize": "{CardLogoSize}",
                                                    "Padding": "5",
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center",
                                                    "FontName": "{FontNameRegularItalic}",
                                                    "Triggers": [
                                                        {
                                                            "Trigger": "NumberAbrevi"
                                                        },
                                                        {
                                                            "Trigger": "NumberBadge"
                                                        },
                                                        {
                                                            "Trigger": "NumberDriver"
                                                        },
                                                        {
                                                            "Trigger": "LeaderInfoColor"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "text",
            "PositionY": 355,
            "PositionZ": 2,
            "Source": "<sessionLeader>",
            "FontSize": 100,
            "Width": 343,
            "FontName": "{FontNameRegularItalic}",
            "Foreground": "{LightBlue}",
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Bottom"
        },
        {
            "BlockType": "itemstack",
            "Width": 343,
            "PositionY": 460,
            "PositionZ": 2,
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Height": 300,
                            "Width": 343,
                            "Orientation": "Vertical",
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "{Item.Team.LiveryPath}",
                                    "Width": 300,
                                    "VerticalAlignment": "Center",
                                    "HorizontalAlignment": "Center",
                                    "Triggers": [
                                        {
                                            "Trigger": "TeamtoCarLivery"
                                        },
                                        {
                                            "Condition": "{Item.Team.LiveryPath, Converter=EmptyObjectToTrue}",
                                            "ConditionAnd": "{Item.Car.LiveryPath, Converter=EmptyObjectToTrue}",
                                            "Property": "Source",
                                            "Value": "{Item.Team.LogotypePath}"
                                        },
                                        {
                                            "Condition": "{Item.Team.LiveryPath, Converter=EmptyObjectToTrue}",
                                            "ConditionAnd": "{Item.Car.LiveryPath, Converter=EmptyObjectToTrue}",
                                            "ConditionAndValue": "{Item.Team.LogotypePath, Converter=EmptyObjectToTrue}",
                                            "Property": "Source",
                                            "Value": "{Item.Car.Vendor.LogotypePath}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "itemstack",
            "Width": 343,
            "PositionX": 0,
            "PositionY": 750,
            "PositionZ": 2,
            "HorizontalAlignment": "Center",
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "dock",
                    "VerticalAlignment": "Top",
                    "HorizontalAlignment": "Center",
                    "Width": 303,
                    "Margin": "20,0,20,0",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Team.FullName, Converter=StringToUpperString}",
                            "VerticalAlignment": "Top",
                            "HorizontalAlignment": "Center",
                            "FontName": "{FontNameBoldItalic}",
                            "FontSize": 50,
                            "Width": 300,
                            "Height": 170,
                            "Padding": "5",
                            "TextOptions": {
                                "Wrap": true,
                                "TextAlignment": "Center",
                                "VerticalAlignment": "Top",
                                "HorizontalAlignment": "Left"
                            },
                            "Triggers": [
                                {
                                    "Trigger": "TeamtoCarName"
                                }
                            ]

                        }
                    ]
                }
            }
        },
        {
            "BlockType": "dock",
            "Width": 343,
            "PositionX": 0,
            "PositionY": 940,
            "PositionZ": 2,
            "Items": [
                {
                    "BlockType": "text",
                    "HorizontalAlignment": "Center",
                    "Source": "#{RaceName, Converter=StringToUpperString} {Session.Track.Name, Converter=StringToUpperString}",
                    "FontSize": 14,
                    "Triggers": [
                        {
                            "Trigger": "NameDescription"
                        }
                    ]
                }
            ]
        }
    ]
}