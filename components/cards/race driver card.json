{
    "ComponentName": "leader_driver_card",
    "BlockType": "canvas",
    "Orientation": "Vertical",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{DarkBlue}"
    },
    "Items": [
        {
            "BlockType": "image",
            "Source": "Session/leader_highlight.png",
            "Height": "{TableHeight}",
            "Width": 343,
            "PositionZ": 1,
            "Colorize": {
                "Color": "{LightBlue}"
            }
        },
        {
            "BlockType": "component",
            "Component": "card_head",
            "PositionX": 50,
            "PositionY": 50,
            "PositionZ": 2
        },
        {
            "BlockType": "itemstack",
            "Orientation": "Vertical",
            "PositionX": 0,
            "PositionY": 220,
            "PositionZ": 2,
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Center",
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "image",
                    "Source": "{Item.Driver.LogotypePath}",
                    "Width": 350,
                    "Triggers": [
                        {
                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                            "Property": "Source",
                            "Value": "driver_placeholder.png"
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionZ": 3,
            "Source": "Session/fl_shade.png",
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Bottom",
            "Colorize": {
                "Color": "{DarkBlue}"
            }
        },
        {
            "BlockType": "text",
            "PositionX": 0,
            "PositionY": 620,
            "PositionZ": 3,
            "Source": "<sessionLeader>",
            "FontSize": "<fontSize>",
            "Width": 343,
            "FontName": "{FontNameRegularItalic}",
            "Foreground": "{LightBlue}",
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Bottom"
        },
        {
            "BlockType": "itemstack",
            "HorizontalAlignment": "Center",
            "PositionY": 700,
            "PositionZ": 3,
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "text",
                    "Source": "<sessionInfo>",
                    "HorizontalAlignment": "Center",
                    "FontName": "{FontNameBoldItalic}",
                    "Width": 343,
                    "Padding": "10",
                    "FontSize": "{FontSizeMedium}",
                    "BackgroundImage": "Session/leader_info.png",
                    "Foreground": "<sessionColor>",
                    "ColorizeBackground": {
                        "Color": "<sessionColor2>"
                    }
                }
            }
        },
        {
            "BlockType": "itemstack",
            "PositionY": 780,
            "PositionZ": 3,
            "HorizontalAlignment": "Center",
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Driver.Name, Converter=StringToUpperString}",
                            "HorizontalAlignment": "Center",
                            "Width": 343,
                            "Padding": "10",
                            "FontSize": 25
                        },
                        {
                            "BlockType": "dock",
                            "MarginTop": 30,
                            "Width": 343,
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "Orientation": "Horizontal",
                                    "HorizontalAlignment": "Center",
                                    "Spacing": 20,
                                    "Padding": "5,0,5,5",
                                    "Items": [
                                        {
                                            "BlockType": "image",
                                            "Source": "{Item.Team.LogotypePath}",
                                            "Height": 40,
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "Triggers": [
                                                {
                                                    "Trigger": "CarLogoRender"
                                                }
                                            ]
                                        },
                                        {
                                            "BlockType": "text",
                                            "Source": "{Item.Team.Abbreviation, Converter=StringToUpperString}",
                                            "FontSize": 50,
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "FontName": "{FontNameBoldItalic}",
                                            "Triggers": [
                                                {
                                                    "Trigger": "NumberAbrevi"
                                                },
                                                {
                                                    "Trigger": "NumberBadge"
                                                },
                                                {
                                                    "Trigger": "NumberDriver"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "text",
            "HorizontalAlignment": "Center",
            "PositionY": 950,
            "PositionZ": 3,
            "Width": 343,
            "Source": "#{RaceName, Converter=StringToUpperString} {Session.Track.Name, Converter=StringToUpperString}",
            "FontSize": 14,
            "Triggers": [
                {
                    "Trigger": "NameDescription"
                }
            ]
        }


    ]
}