{
    "ComponentName": "leader_driver_card",
    "BlockType": "canvas",
    "Orientation": "Vertical",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{DarkBlue}"
    },
    "Items": [
        {
            "BlockType": "image",
            "Source": "Session/leader_highlight.png",
            "Height": "{TableHeight}",
            "Width": 343,
            "PositionZ": 1,
            "Colorize": {
                "Color": "{LightBlue}"
            }
        },
        {
            "BlockType": "component",
            "Component": "card_head",
            "PositionX": 50,
            "PositionY": 40,
            "PositionZ": 2
        }, {
            "BlockType": "itemstack",
            "HorizontalAlignment": "Center",
            "Width": 343,
            "PositionZ": 2,
            "PositionY": 230,
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Height": 600,
                            "Width": 343,
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Orientation": "Horizontal",
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "{Item.Driver.LogotypePath}",
                                    "Height": 700,
                                    "VerticalAlignment": "Top",
                                    "HorizontalAlignment": "Center",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                            "Property": "Source",
                                            "Value": "driver_placeholder.png"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "image",
            "PositionX": 0,
            "PositionZ": 3,
            "Source": "Session/fl_shade.png",
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Bottom",
            "Colorize": {
                "Color": "{DarkBlue}"
            }
        },
        {
            "BlockType": "text",
            "PositionX": 0,
            "PositionY": 620,
            "PositionZ": 3,
            "Source": "[<sessionLeader>]",
            "FontSize": "<fontSize>",
            "Width": 343,
            "FontName": "{FontNameRegularItalic}",
            "Foreground": "{LightBlue}",
            "HorizontalAlignment": "Center",
            "VerticalAlignment": "Bottom"
        },
        {
            "BlockType": "itemstack",
            "HorizontalAlignment": "Center",
            "PositionY": 710,
            "PositionZ": 3,
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "text",
                    "Source": "[<sessionInfo>]",
                    "HorizontalAlignment": "Center",
                    "FontName": "{FontNameBoldItalic}",
                    "Width": 343,
                    "Padding": "5,10,5,10",
                    "FontSize": 40,
                    "BackgroundImage": "Session/leader_info.png",
                    "Foreground": "<sessionColor>",
                    "ColorizeBackground": {
                        "Color": "<sessionColor2>"
                    },
                    "Triggers": [
                        {
                            "Condition": "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                            "ConditionAnd": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                            "Property": "Source",
                            "Value": "[{Item.Car.Vendor.Name, Converter=StringToUpperString}]"
                        },
                        {
                            "Condition": "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                            "ConditionAnd": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                            "Property": "Foreground",
                            "Value": "{Item.Car.SecondaryColor}"
                        },
                        {
                            "Condition": "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                            "ConditionAnd": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                            "Property": "ColorizeBackground.Color",
                            "Value": "{Item.Car.Color}"
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "itemstack",
            "PositionY": 780,
            "PositionZ": 3,
            "HorizontalAlignment": "Center",
            "ItemStackOptions": {
                "Limit": 1,
                "ItemSource": "{Session.Drivers}",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "[{Item.Driver.Name, Converter=StringToUpperString}]",
                            "HorizontalAlignment": "Center",
                            "Width": 343,
                            "Padding": "10",
                            "FontSize": 25
                        },
                        {
                            "BlockType": "dock",
                            "MarginTop": 10,
                            "Width": 343,
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "Orientation": "Horizontal",
                                    "HorizontalAlignment": "Center",
                                    "Spacing": 20,
                                    "Padding": "5",
                                    "Items": [
                                        {
                                            "BlockType": "image",
                                            "Source": "{Item.Team.LogotypePath}",
                                            "Height": 70,
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "Triggers": [
                                                {
                                                    "Trigger": "CarLogoRender"
                                                }
                                            ]
                                        },
                                        {
                                            "BlockType": "text",
                                            "Source": "[{Item.Team.Abbreviation, Converter=StringToUpperString}]",
                                            "FontSize": 50,
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "FontName": "{FontNameBoldItalic}",
                                            "Triggers": [
                                                {
                                                    "Trigger": "NumberAbrevi"
                                                },
                                                {
                                                    "Trigger": "NumberBadge"
                                                },
                                                {
                                                    "Trigger": "NumberDriver"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "text",
            "HorizontalAlignment": "Center",
            "PositionY": 950,
            "PositionZ": 3,
            "Width": 343,
            "Source": "#[{Session.Track.CircuitFullName, Converter=StringToUpperString}]",
            "FontSize": 14,
            "Triggers": [
                {
                    "Trigger": "NameDescription"
                }
            ]
        }


    ]
}