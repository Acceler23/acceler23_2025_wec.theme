{
    "ComponentName": "leader_car_card",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{LightBlue}"
    },
    "Items": [
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "BackgroundImage": "Session/car_highlight.png",
            "UseBackgroundCrop": true,
            "Height": 970,
            "Width": 343,
            "ColorizeBackground": {
                "Color": "{DarkBlue}"
            },
            "Items": [
                {
                    "BlockType": "component",
                    "Component": "card_head"
                },
                {
                    "BlockType": "itemstack",
                    "HorizontalAlignment": "Center",
                    "ItemStackOptions": {
                        "Limit": 1,
                        "ItemSource": "{Session.Drivers}",
                        "ItemTemplate": {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "HorizontalAlignment": "Center",
                                    "Width": 343,
                                    "Padding": "10",
                                    "FontSize": "{FontSizeMedium}",
                                    "BackgroundImage": "Session/leader_info.png",
                                    "Foreground": "{Item.Team.SecondaryColor}",
                                    "ColorizeBackground": {
                                        "Color": "{Item.Team.Color}"
                                    },
                                    "Items": [
                                        {
                                            "BlockType": "dock",
                                            "Width": 343,
                                            "Items": [
                                                {
                                                    "BlockType": "stack",
                                                    "Orientation": "Horizontal",
                                                    "HorizontalAlignment": "Center",
                                                    "Spacing": 20,
                                                    "Padding": "5,0,5,5",
                                                    "Items": [
                                                        {
                                                            "BlockType": "image",
                                                            "Source": "{Item.Team.LogotypePath}",
                                                            "Height": 40,
                                                            "HorizontalAlignment": "Center",
                                                            "VerticalAlignment": "Center"
                                                        },
                                                        {
                                                            "BlockType": "text",
                                                            "Source": "{Item.Team.Abbreviation, Converter=StringToUpperString}",
                                                            "Foreground": "{Item.Team.SecondaryColor}",
                                                            "FontSize": "{FontSizeBig}",
                                                            "Padding": "0,0,10,0",
                                                            "HorizontalAlignment": "Center",
                                                            "VerticalAlignment": "Center",
                                                            "FontName": "{FontNameRegularItalic}",
                                                            "Triggers": [
                                                                {
                                                                    "Trigger": "NumberAbrevi"
                                                                },
                                                                {
                                                                    "Trigger": "NumberBadge"
                                                                },
                                                                {
                                                                    "Trigger": "NumberDriver"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                {
                    "BlockType": "stack",
                    "BackgroundImage": "{Session.Track.Nation.LogotypePath}",
                    "Orientation": "Vertical",
                    "Height": "*",
                    "Width": "*",
                    "BackgroundImageOpacity": 50,
                    "UseBackgroundCrop": false,
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "<sessionLeader>",
                            "FontSize": "{FontSizeBig}",
                            "MarginTop": 25,
                            "Height": 50,
                            "FontName": "{FontNameBoldItalic}",
                            "Foreground": "{LightBlue}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Bottom"
                        },
                        {
                            "BlockType": "itemstack",
                            "Width": "*",
                            "HorizontalAlignment": "Center",
                            "MarginTop": 50,
                            "ItemStackOptions": {
                                "Limit": 1,
                                "ItemSource": "{Session.Drivers}",
                                "ItemTemplate": {
                                    "BlockType": "stack",
                                    "Orientation": "Vertical",
                                    "Items": [
                                        {
                                            "BlockType": "dock",
                                            "Height": 450,
                                            "Width": "*",
                                            "Orientation": "Vertical",
                                            "Items": [
                                                {
                                                    "BlockType": "image",
                                                    "Source": "{Item.Team.LiveryPath}",
                                                    "Width": 300,
                                                    "VerticalAlignment": "Center",
                                                    "HorizontalAlignment": "Center"
                                                },
                                                {
                                                    "BlockType": "text",
                                                    "Source": "{Item.Team.FullName, Converter=StringToUpperString}",
                                                    "VerticalAlignment": "Bottom",
                                                    "HorizontalAlignment": "Center",
                                                    "FontName": "{FontNameBoldItalic}",
                                                    "FontSize": "{FontSizeMedium}",
                                                    "Width": 223,
                                                    "Padding": "60,20,60,30",
                                                    "TextOptions": {
                                                        "Wrap": true,
                                                        "TextAlignment": "Center",
                                                        "HorizontalAlignment": "Left"
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "Margin": "0,60,0,0",
                    "VerticalAlignment": "Bottom",
                    "HorizontalAlignment": "Center",
                    "Source": "#{RaceName, Converter=StringToUpperString} {Session.Track.Name, Converter=StringToUpperString}",
                    "FontSize": 14,
                    "Triggers": [
                        {
                            "Trigger": "NameDescription"
                        }
                    ],
                    "MarginTop": -20,
                    "Padding": "0,20,0,30",
                    "TextOptions": {
                        "Wrap": true,
                        "TextAlignment": "Center"
                    }
                }
            ]
        }
    ]
}