{
    "ComponentName": "leader_driver_card",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Height": "{TableHeight}",
    "Width": 343,
    "BackgroundImage": "Session/leader_bg.png",
    "ColorizeBackground": {
        "Color": "{DarkBlue}"
    },
    "Items": [
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "BackgroundImage": "Session/leader_highlight.png",
            "UseBackgroundCrop": true,
            "Height": 970,
            "Width": 343,
            "ColorizeBackground": {
                "Color": "{LightBlue}"
            },
            "Items": [
                {
                    "BlockType": "component",
                    "Component": "card_head"
                },
                {
                    "BlockType": "itemstack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "ItemStackOptions": {
                        "Limit": 1,
                        "ItemSource": "{Session.Drivers}",
                        "ItemTemplate": {
                            "BlockType": "stack",
                            "BackgroundImage": "{Item.Driver.LogotypePath}",
                            "Orientation": "Vertical",
                            "Width": 343,
                            "Height": 500,
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "Session/driver_shade.png",
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Bottom",
                                    "Height": 450,
                                    "Width": "*",
                                    "Colorize": {
                                        "Color": "{DarkBlue}"
                                    }
                                },
                                {
                                    "BlockType": "text",
                                    "Source": "<sessionLeader>",
                                    "FontSize": "<fontSize>",
                                    "MarginTop": -50,
                                    "Height": 50,
                                    "FontName": "{FontNameBoldItalic}",
                                    "Foreground": "{LightBlue}",
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Bottom"
                                }
                            ]
                        }
                    }
                },
                {
                    "BlockType": "itemstack",
                    "HorizontalAlignment": "Center",
                    "ItemStackOptions": {
                        "Limit": 1,
                        "ItemSource": "{Session.Drivers}",
                        "ItemTemplate": {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Source": "{Item.Team.Name, Converter=StringToUpperString}",
                                    "HorizontalAlignment": "Center",
                                    "Width": 343,
                                    "Padding": "10",
                                    "FontSize": "{FontSizeMedium}",
                                    "BackgroundImage": "Session/leader_info.png",
                                    "Foreground": "{Item.Team.SecondaryColor}",
                                    "ColorizeBackground": {
                                        "Color": "{Item.Team.Color}"
                                    }
                                }
                            ]
                        }
                    }
                },
                {
                    "BlockType": "itemstack",
                    "MarginTop": 30,
                    "HorizontalAlignment": "Center",
                    "ItemStackOptions": {
                        "Limit": 1,
                        "ItemSource": "{Session.Drivers}",
                        "ItemTemplate": {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Source": "{Item.Driver.Name, Converter=StringToUpperString}",
                                    "HorizontalAlignment": "Center",
                                    "Width": 343,
                                    "Padding": "10",
                                    "FontSize": 25
                                },
                                {
                                    "BlockType": "dock",
                                    "Width": 343,
                                    "Items": [
                                        {
                                            "BlockType": "stack",
                                            "Orientation": "Horizontal",
                                            "HorizontalAlignment": "Center",
                                            "Spacing": 20,
                                            "Padding": "5,0,5,5",
                                            "Items": [
                                                {
                                                    "BlockType": "image",
                                                    "Source": "{Item.Team.LogotypePath}",
                                                    "Height": 40,
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center"
                                                },
                                                {
                                                    "BlockType": "text",
                                                    "Source": "{Item.Team.Abbreviation, Converter=StringToUpperString}",
                                                    "FontSize": 50,
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center",
                                                    "FontName": "{FontNameBoldItalic}",
                                                    "Triggers": [
                                                        {
                                                            "Trigger": "NumberAbrevi"
                                                        },
                                                        {
                                                            "Trigger": "NumberBadge"
                                                        },
                                                        {
                                                            "Trigger": "NumberDriver"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                {
                    "BlockType": "text",
                    "Margin": "0,60,0,0",
                    "VerticalAlignment": "Bottom",
                    "HorizontalAlignment": "Center",
                    "Source": "#{RaceName, Converter=StringToUpperString} {Session.Track.Name, Converter=StringToUpperString}",
                    "FontSize": 14,
                    "Triggers": [
                        {
                            "Trigger": "NameDescription"
                        }
                    ]
                }
            ]
        }
    ]
}